    <%= label_tag nil, t('activerecord.attributes.mining_type.description')  %>:
    <%= text_field_tag nil, @mining_type.description, class: "form-control", disabled: true %>
  </div>

  <div class="form-group">
    <%= label_tag nil, t('activerecord.attributes.mining_type.acronym') %>:
