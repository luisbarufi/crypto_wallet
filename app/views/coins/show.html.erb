<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @coin.description %>
</p>

<p>
  <strong>Acronym:</strong>
  <%= @coin.acronym %>
</p>

<p>
  <strong>Url image:</strong>
  <%= image_tag @coin.url_image, size: '25x25' unless @coin.url_image.nil? %>
</p>

<%= link_to "#{t('activerecord.attributes.attribute_commons.edit')}", edit_coin_path(@coin), class: "btn btn-primary" %>
<%= link_to "#{t('activerecord.attributes.attribute_commons.back')}", coins_path, class: "btn btn-primary" %>
