<form>
  <div class="form-group">
    <%= label_tag nil, t('activerecord.attributes.coin.description') %>:
    <%= text_field_tag nil, @coin.description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag nil,  t('activerecord.attributes.coin.acronym') %>:
    <%= text_field_tag nil, @coin.acronym, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag nil, t('activerecord.attributes.coin.url_image') %>:
    <%= text_field_tag nil, @coin.url_image, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag nil, t('activerecord.attributes.coin.mining_type') %>:
    <%= text_field_tag nil, @coin.mining_type.description, class: "form-control" %>
  </div>
</form>

<%= link_to "#{t('activerecord.attributes.attribute_commons.edit')}", edit_coin_path(@coin), class: "btn btn-primary" %>
<%= link_to "#{t('activerecord.attributes.attribute_commons.back')}", coins_path, class: "btn btn-primary" %>
